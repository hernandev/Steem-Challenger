// user profile wallet
ch-box(v-if="loading !== true", title="Wallet", icon="icon-wallet")
  // profile wallet wrapper.
  div.col-lg-12.profile-wallet
    div.row.estimate
      div.col-lg-12

    // wrapper
    div.row.balances
      div.col-lg-12
        div.row
          div.col-lg-12
            span.usd-total
              // em.icon-graph
              | ~USD {{ usdWallet.sum | roundAmount }}
            span USD {{ usdWallet.totals.balance | roundAmount }} BALANCE
            span &nbsp;/&nbsp;
            span USD {{ usdWallet.totals.savings | roundAmount }} SAVINGS
            // br
            // small (approximate conversion)
      div.col-lg-12.right-col
        div.row
          div.col-lg-6.left
            span.usd-value
              | {{ wallet.totals.steem | roundAmount }}
              small STEEM
          div.col-lg-6.right
            span.usd-value
              | {{ wallet.totals.sbd | roundAmount }}
              small SBD
