// user profile wallet
ch-box(v-if="loading !== true", :padded="false", title="Author Payouts: ", icon="icon-hourglass")
  span.title-extra(slot="title-extra")
    | ${{ convertSbdToUSD(totalPayout) | roundAmount }}
  // profile wallet wrapper.
  div.col-lg-12.profile-posts
    // single row table to display total payout.
    // table.table
      tbody
        tr.total
          td.bold.primary ${{ convertSbdToUSD(totalPayout) | roundAmount }}

    // post break down table.
    div.table-responsive
      table.table.table-no-payouts(v-if="pendingDiscussionsCount === 0")
        tbody
          tr
            td
              | no payouts for&nbsp;
              span @{{ username }}
              | at the moment.

      table.table(v-if="pendingDiscussionsCount > 0")
        thead
          tr
            th(scope='col') Post
            th.right(scope='col') CashOut
            th.right(scope='col')
              span.d-none.d-sm-block Beneficiaries
              span.d-block.d-sm-none Ben.
            th.right(scope='col') SBD
            th.right(scope='col') SP
            th.right(scope='col') USD
        tbody
          tr(v-for="post in pendingDiscussions", v-if="post._pending_payout_value > 0")
            // link to the post.
            th.permlink(scope="row", data-toggle="tooltip", data-placement="auto", :title="post.body | limit")
              a(:href="'https://steemit.com'+post.url", target="_blank") {{ post.title }}
            // when is the money be available?
            td.right(data-toggle="tooltip", data-placement="auto", :title="post.cashout_time | localDate") {{ post.cashout_time | humanDate }}
            // percent value for beneficiaries.
            td.right(data-toggle="tooltip", data-placement="auto", :title="post._beneficiaries_percent.who") {{ post._beneficiaries_percent.sum | percent }}
            // amount in SBD.
            td.right {{ post._actual_pending_reward | roundAmount }} SBD
            // amount in SP.
            td.right {{ (post._actual_pending_reward / priceFeed) | roundAmount }} SP
            // amount in USD.
            td.right.bold.primary ${{ convertSbdToUSD(post._actual_pending_reward) | roundAmount }}
